/* pages/personalCenter/index.wxss */
.header {
  height: 400rpx;
  background-image: linear-gradient(to right,#fbc2eb,#a6c1ee);
  display: flex;
  justify-content: center;
  align-items: center;
}
.login_btn {
}
.login_out {
  font-size: 33rpx;

  margin-top: 20rpx;
}

.root {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.touxiang {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  margin-top: 30rpx;
  margin-bottom: 10rpx;
}
/* 用css花一个箭头 */
.right_arrow {
  border: solid black;
  border-width: 0 3px 3px 0;
  padding: 3px;
  position: absolute;
  right: 15px;
  transform: rotate(-45deg);
  -webkit-transform: rotate(-45deg);
}
.item {
  display: flex;
  background-color: white;
  padding: 25rpx;
  align-items: center;
  border-bottom: 1px solid gainsboro;
  margin-left: 10px;
}
.button {
  width: 100%;
  background-color: white;
  border: none;
  text-align: left;
  padding: 0px;
  margin: 0px;
  line-height: 1.3;
  font-size: 16px;
}
.button::after {
  border: none;
  border-radius: 0;
}
