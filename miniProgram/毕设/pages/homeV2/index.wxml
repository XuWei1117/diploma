        <van-card num="1" price="{{item.r_price}}" desc="{{item.t_desc}}" title="{{item.r_name}}" thumb="{{ item.r_img }}">
          <view slot="footer">
            订单编号：{{item.r_number}}

            <van-dialog id="van-dialog"></van-dialog>
            <van-button bindtap="goPayBtnClick" style="margin-right: 20rpxs;" data-id="{{item.r_id}}" round size="mini" type="danger">去支付</van-button>
            <van-button bindtap="deleteOrder" data-id="{{item.r_id}}" round size="mini" type="danger">删除</van-button>
