<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.school.management1.mapper.NewsMapper">
    <select id="selectAllNews" resultType="com.school.management1.domain.News" parameterType="com.school.management1.domain.News">
        select n_id,n_title,n_date from news
        <where>
            <if test="news.condition != null">
                n_title like #{news.conditionNew}
            </if>
        </where>
        order by n_date desc
    </select>

    <delete id="deleteNews" parameterType="int">
        delete from news where n_id = #{n_id}
    </delete>

    <insert id="addNews" parameterType="com.school.management1.domain.News">
        insert into news (n_title,n_detail1,n_date) values (#{n_title},#{n_detail1},#{n_date})
    </insert>

    <select id="selectNewsById" parameterType="int" resultType="com.school.management1.domain.News">
        select * from news where n_id = #{n_id}
    </select>

    <update id="updateNews" parameterType="com.school.management1.domain.News">
        update news set n_title=#{n_title},n_detail1=#{n_detail1},n_date=#{n_date} where n_id = #{n_id}
    </update>

</mapper>