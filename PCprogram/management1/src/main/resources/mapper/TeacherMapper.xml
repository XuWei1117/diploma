<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.school.management1.mapper.TeacherMapper">
    <select id="showAllTeacher" resultType="com.school.management1.domain.Teacher">
        select t_id,t_name,t_desc,t_gender,t_age from teacher t
    </select>
    <insert id="addTeacher" parameterType="com.school.management1.domain.Teacher">
        insert into teacher (t_name,t_desc,t_gender,t_age,t_img) values (#{t_name},#{t_desc},#{t_gender},#{t_age},#{t_img})
    </insert>
    <update id="updateTeacher" parameterType="com.school.management1.domain.Teacher">
        update teacher set t_gender = #{t_gender},t_age = #{t_age},t_desc = #{t_desc} where t_id = #{t_id}
    </update>
    <select id="selectTeacher" parameterType="int" resultType="com.school.management1.domain.Teacher">
        select t_id,t_name,t_desc,t_age,t_gender from teacher where t_id = #{t_id}
    </select>
    <select id="selectAllTeacher" parameterType="string" resultType="com.school.management1.domain.Teacher">
        select t_id,t_name,t_desc,t_gender,t_age from teacher t
        <where>
            <if test="t_name != null">
                t_name like #{t_name}
            </if>
        </where>

    </select>



</mapper>